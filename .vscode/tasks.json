{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Execute Script in 3ds Max",
            "type": "shell",
            "command": "${workspaceFolder}\\MXSPyCOM\\MXSPyCOM.exe",
            "args": [
                "-s",
                "${file}"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Enable Debug in 3Ds Max",
            "type": "shell",
            "command": "${workspaceFolder}\\MXSPyCOM\\MXSPyCOM.exe",
            "args": [
                "-s",
                "${workspaceFolder}\\debug\\start_debug.py"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "close": true
            },
            "problemMatcher": []
        }
    ]
}
